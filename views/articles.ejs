<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Articles</title>
    <style>
        /* Optional: Add styling for your articles */
        article {
            background-color: orange;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h1>Display Articles</h1>
    <hr/>

    <% if (allArticles && allArticles.length > 0) { %>
        <% allArticles.forEach(function(article) { %>
            <article>
                <h2><%= article.title %></h2>
                <p><%= article.body %></p>
                <p>Likes: <%= article.numberOfLikes %></p>
            </article>
        <% }); %>
    <% } else { %>
        <p>No articles found.</p>
    <% } %>
</body>
</html>
